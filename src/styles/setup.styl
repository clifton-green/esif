/**
 * Setup
 *
 * Setting up the grid and primary styles
 *
 **/

body {
  ff-body();
  color: $text-colour;
  background-color: $panel-colour;
}

.page-wrapper {
  cf();
  background-color: #fff;
}

.pretitle {
  color: $grey-1;
  font-size: $mantle;
}

h1,
h2,
h3 {
  ff-title();
  a {
    color: currentColor;
  }
}

h1 {
  font-size: $crust;
}
h2 {
  font-size: $mantle;
}
h3 {
  font-size: $innerCore;
}
h4 {
  font-size: $outerCore;
}

a {
  color: $link-colour;
  text-decoration: underline;
  &:hover {
    color: $link-hover-colour;
  }
  &:focus {
    background-color: $focus-colour
  }
  &[rel="external"] {
    &:after {
      content: ''
      display inline-block
      width: $hspacing*1.1
      height: $vspacing*1.2
      margin-left 1px //pixel value used as this is just a spacer
      overflow hidden
      background: url(/static/images/external-link.png);
      background-position left top
    }
    &:hover {
      &:after {
        background-position: left bottom;
      }
    }
  }
}

p {
    line-height: $lineHeight*1.2;
  +above(l) {
    font-size: $bodyCopy;
    line-height: $lineHeight*1.2;
  }
  margin-bottom: $vspacing;
  &.lead {
    font-size: $lead;
  }
}

.skip-link {
  position: absolute;
  left: -100%;
  top: -100%;
}

.wrapper {
  cf();
  position: relative;
  padding: 0 2.5%;
  +above(l) {
   center(1020px);
  }
}

.col {
  &.primary {
    +above(m) {
      col(2/3);
    }
  }
  &.sidebar {
    +above(m) {
      col(1/3);
    }
  }
}

table {
  width: 100%;
  font-size: $baseFont*1.6
  th,
  td {
    padding: $vspacing 0;
  }
  th {
    font-weight: bold;
    border-bottom: 1px solid $grey-2;
  }
}
