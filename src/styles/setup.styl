/**
 * Setup
 *
 * Setting up the grid and primary styles
 *
 **/

body {
  ff-body();
  color: $text-colour;
}

h1,
h2,
h3 {
  ff-title();
  color: $primary;
  a {
    color: currentColor;
  }
}

h1 {
  font-size: $crust;
}
h2 {
  font-size: $mantle;
}
h3 {
  font-size: $innerCore;
}
h4 {
  font-size: $outerCore;
}

a {
  color: $link-colour;
  text-decoration: underline;
  &:hover {
    $link-hover-colour;
  }
}

p {
  line-height: $lineHeight;
  margin-bottom: $lineHeight;
  &.lead {
    font-size: $lead;
  }
}

.skip-link {
  position: absolute;
  left: -100%;
  top: -100%;
}

.wrapper {
  +above(l) {
   center(1020px);
  }
}
