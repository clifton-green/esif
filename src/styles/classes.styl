//basic button
.o-btn {
  cursor: pointer;
  padding: $spacing;
  color: $highlight-colour;
  background-color: $button-colour;
  border-radius: $brad;
  font-weight: bold
  &:hover {
    background-color: darken($button-colour, 10%);
  }

  a {
    // In case class is on parent
    color: $secondary
  }

}
