/* Contains development only styling. */
/* Warning: This file is not compiled during a production build so
  never put anything essential in here */

.devtools {
  position: absolute;
  top: -100px;
  left: 0;
  z-index: 10001;
  background-color: #fff;
  width: 100%;
  padding: 1rem;
  transition: top .3s ease-in-out;
  &.visible {
    top:0;
  }

  span {
    cursor:pointer;
    color:#fff;
    display:inline-block;
    padding: .3rem 1rem 0;
    margin: 0 1rem;
    font-size: 1.4rem;
    font-weight: bold;
  }

  .close {
    background:red;
  }

  .show-components {
    background:green;
  }
  .show-json {
    background:blue;
  }
  .form-validation {
    background:orange;
  }
}

.devButton {
  cursor:pointer;
  position:absolute;
  top:0;
  left:0;
  font-size:10px;
  background-color:dodgerBlue;
  opacity:.5;
  padding:1px 2px;
  z-index: 10000;
  color:white;
  display:inline-block;
  height:10px;
  width:10px;
}
