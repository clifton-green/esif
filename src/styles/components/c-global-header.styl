.c-global-header {
  cf()
  background-color $text-colour
  padding $spacing
  .logo {
    text-decoration none
    ff-title()
    text-transform uppercase
    color $white
    font-size $baseFont * 3
  }
  img {
    width 35px
    height 31px
    margin-right ($hspacing/2)
    vertical-align middle
  }
  h1 {
    color #fff
    font-size $baseFont*2.4
  }
  .col {
    col(2/3)
    float right
  }
}
