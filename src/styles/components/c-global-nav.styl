.c-global-nav {
  position: absolute;
  top: $vspacing*12;
  right: 0;
  z-index: 3;
  > span {
    cursor: pointer;
    position: absolute;
    right: $hspacing;
    top: 0;
    color: $white;
    font-size: $baseFont*1.6;
    padding-right: $hspacing*1.5;
    &:after {
      position: absolute;
      top: ($vspacing/2);
      right:0;
      content: "\25BC";
      font-size: $baseFont;
      transition: transform .2s ease-in-out;
    }
  }
  &.open > span {
    &:after {
      top: ($vspacing/3);
      transform: rotate(180deg);
    }
  }
  ul {
    max-height: 0;
    overflow: hidden;
    width: 100vw;
    background-color: $black;
    margin-top: $vspacing*3;
    transition: max-height .5s ease-in-out;
    li {
      border-top: 1px solid rgba($grey-1, .3);
      a {
        padding: ($vspacing/2) $hspacing*3;
      }
    }
  }
  &.open ul {
    max-height: 1000px;
  }

  li {
    a {
      display: block;
      color: $white;
      font-weight: bold;
      text-decoration: none;
      font-size: $baseFont * 1.6;
      &:hover {
        text-decoration: underline;
        color: $link-hover-colour;
      }
    }
  }

  +above(m) {
    position: static;
    > span {
      display: none;
    }
    padding-bottom: ($vspacing/2);
    ul {
      max-height: 1000px;
      margin: 0;
      width: auto;
      li {
        border: 0;
        a {
          padding: 0;
        }
      }
    }
    li {
      display: inline-block;
    }
    a {
      margin-right: $spacing;
    }
  }
}
