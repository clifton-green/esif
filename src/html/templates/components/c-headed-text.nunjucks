<section class="c-headed-text">
  <h1>{{ context.title }}</h1>
  {%if context.subtitle %}
  <h2>{{ context.subtitle }}</h2>
  {% endif %}
  <p>
    {{ context.bodyCopy }}
  </p>
  {%if context.ctaText != '' %}
    <a href="{{context.ctaURL}}" class="{{context.ctaType}}">{{context.ctaText}}</a>
  {% endif %}
</section>
